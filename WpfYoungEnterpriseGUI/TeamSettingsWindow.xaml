<Window x:Class="WpfYoungEnterpriseGUI.TeamSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfYoungEnterpriseGUI"
        mc:Ignorable="d"
        Title="Team Settings" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBlock Text="Chose the following" HorizontalAlignment="Center"/>
            <Button Name="bChangeTeamName" Content="Change team name"/>
            <Button Name="bChangeTrack" Content="Change track"/>
            <Button Name="bChangeTeamMembers" Content="Change team members"/>
            <Button Name="bApply" Content="Apply for event"/>
            <Button Name="bUploadReport" Content="Upload report"/>
            <Button Name="bBack" Content="Back"/>
        </StackPanel>
    </StackPanel>
</Window>
